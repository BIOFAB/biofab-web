<div id='container'>
  <div class='vs'>
    <h3>vs.</h3>
  </div>
  <div class='column1'>

    <h3>Bi-cistronic 5' UTR library</h3>

    <div id='bcd_histogram' class='hist bcd_histogram'></div>

    <div class='dia bcd_diagram'>
      <%= 
        render(:partial => '/parts/diagram_simple', 
                 :locals => {
                   :classes => 'nolabel', 
                   :label => nil, 
                   :performance => 0,
                   :annotations => @bcd_annotations})

      %>
    </div>

    <div id='bcd_goi_histogram' class='goi_hist goi_histogram_container'></div>

  </div>

  <div class='column2'>

    <h3>Mono-cistronic 5' UTR library</h3>

    <div id='mcd_histogram' class='hist mcd_histogram'></div>

    <div class='dia mcd_diagram'>
      <%= 
        render(:partial => '/parts/diagram_simple', 
                 :locals => {
                   :classes => 'nolabel', 
                   :label => nil, 
                   :performance => 0,
                   :annotations => @mcd_annotations})
      %>
    </div>

    <div id='mcd_goi_histogram' class='goi_hist goi_histogram_container'></div>

  </div>

  <div class='overlay' id='overlay'>
    <div class='grayout' id='overlay_grayout' onclick='Overlay.hide()'></div>
    <div class='box' id='overlay_box'>
      <div class='close_button' onclick='Overlay.hide()'><a href='#'>X</a></div>
      <div class='content' id='overlay_content'>
      </div>
    </div>
  </div>
</div>




<div id='hidden'>
  <div id='plasmid_viewer_container'>
    <object width="100%" height="100%" type="application/x-shockwave-flash" data="/flash/PlasmidViewerBiofab.swf" id="plasmid_viewer" style="visibility: inherit;">
      <param name='allowfullscreen' value='true'>
      <param name='allowscriptaccess' value='always'>
    </object>
  </div>
  
  <div id='sequence_viewer_container'>
    <object width="100%" height="100%" type="application/x-shockwave-flash" data="/flash/SequenceViewerBiofab.swf" id="sequence_viewer" style="visibility: inherit;">
      <param name='allowfullscreen' value='true'>
      <param name='allowscriptaccess' value='always'>
    </object>
  </div>
</div>
